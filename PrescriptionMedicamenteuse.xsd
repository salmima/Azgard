<xs:schema version="1.0" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace = "http://azgardengineering.com/PrescriptionMedic"
           xmlns = "http://azgardengineering.com/PrescriptionMedic"
           elementFormDefault="qualified">

    <xs:element name="prescription_medic" type="PresMedic"/>
        
        <xs:complexType name="PresMedic">
            <xs:sequence>
                <xs:element name="date_prescription" type="xs:date"/>
                <xs:element name="informationsPrescripteur" type="InformationsPrescripteur"/>
                <xs:element name="informationsPatient" type="InformationsPatient"/>
                <xs:element name="liste_medicaments" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
        
        <xs:complexType name="InformationsPatient">
            <xs:sequence>
                <xs:element name="nom" type="xs:string"/>
                <xs:element name="prenom" type="xs:string"/>
                <xs:element name="date_naissance" type="xs:date"/>
            </xs:sequence>
        </xs:complexType>
            
        <xs:complexType name="InformationsPrescripteur">
            <xs:sequence>
                <xs:element name="nom" type="xs:string"/>
                <xs:element name="prenom" type="xs:string"/>
                <xs:element name="specialite" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>   
                    
</xs:schema>

