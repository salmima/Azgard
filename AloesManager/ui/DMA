    private void boutonAcceuilActionPerformed(java.awt.event.ActionEvent evt) {                                              
        AcceuilDMA ac = new AcceuilDMA();
        this.setVisible(false);
        ac.setExtendedState(JFrame.MAXIMIZED_BOTH);
        ac.setVisible(true);
    }                                             

    private void jTabbedPane1StateChanged(javax.swing.event.ChangeEvent evt) {                                          
        int selectedIndex = jTabbedPane1.getSelectedIndex();
        switch (selectedIndex) {
            case 0: titrePage.setText("Cr√©er un DMA");
                break;
            case 1: titrePage.setText("Chercher un DMA");
                break;
            case 2: titrePage.setText("Chercher un m√©decin");
                break;
            default: titrePage.setText("Localiser un patient");
                break;
        }

    }                                         

    public void accessTab(int i){
        jTabbedPane1.setSelectedIndex(i);
    }
