<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace = "http://azgardengineering.com/Resultat"
           xmlns = "http://azgardengineering.com/Resultat"
           elementFormDefault="qualified">
    
      <xs:element name="resultat" type="Resultat"/>
        
        <xs:complexType name="Resultat">
            <xs:sequence>
                <xs:element name="date_resultat" type="xs:date"/>
                <xs:element name="type_examen" type="xs:string"/>
                <xs:element name="informationsPrescripteur" type="InformationsPrescripteur"/>
                <xs:element name="informationsPatient" type="InformationsPatient"/>
                <xs:element name="compte_rendu" type="xs:string"/>
                <xs:element name="observations" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
        
        <xs:complexType name="InformationsPatient">
            <xs:sequence>
                <xs:element name="nom" type="xs:string"/>
                <xs:element name="prenom" type="xs:string"/>
                <xs:element name="date_naissance" type="xs:date"/>
            </xs:sequence>
        </xs:complexType>
            
        <xs:complexType name="InformationsPrescripteur">
            <xs:sequence>
                <xs:element name="nom" type="xs:string"/>
                <xs:element name="prenom" type="xs:string"/>
                <xs:element name="specialite" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>   

</xs:schema>
